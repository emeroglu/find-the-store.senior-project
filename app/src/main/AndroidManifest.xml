<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kaan.findthestore">

    <uses-feature android:name="android.hardware.sensor.accelerometer" android:required="true"></uses-feature>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application android:allowBackup="true" android:label="@string/app_name"
        android:icon="@drawable/ic_launcher" android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.Language_Selection"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.Store_Selection" android:configChanges="orientation|screenSize"/>
        <activity android:name=".Activities.Result" android:configChanges="orientation|screenSize"/>

    </application>

</manifest>
